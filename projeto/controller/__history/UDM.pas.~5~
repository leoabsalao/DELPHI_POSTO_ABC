{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

procedure TDMConex.DataModuleCreate(Sender: TObject);
begin
   with FDConex do
   begin
      close;
      with Params do
      begin
         Add('DriverID=FB');
         Add('Server=localhost');
         Add('DataBase=C:\DEV\Delphi\POSTO_ABC\banco\BANCO_POSTOABC.FDB');
         Add('User_Name=SYSDBA');
         Add('Password=masterkey');
      end;

   end;

   Ds.DataSet := FDQuery;
end;

end.
